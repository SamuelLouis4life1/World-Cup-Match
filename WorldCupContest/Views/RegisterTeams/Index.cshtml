@model IEnumerable<WorldCupContest.Models.RegisterTeam>

@{
    ViewData["Title"] = "Index";
}

<h1>Team home page</h1>

<p>
    <a asp-action="Create">Create New Team</a>
    @using (Html.BeginForm("Index", "Matchups", FormMethod.Get))
    {
        <button type="submit" name="botao1" id="botao1">Create a new matchup</button>
    }

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Team Name
            </th>
            <th>
                Score
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Score)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
